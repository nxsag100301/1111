@model DATN_Ecommerce.Models.TinDang

@{
    ViewData["Title"] = "Thông tin tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class=" breadcrumd-item" asp-area="Admin" asp-controller="AdminTinDangs" asp-action="Index">Danh sách tin tức</a>
            <span class="breadcrumb-item active">Thông tin tin tức : @Model.PostId</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin tin tức : @Model.PostId</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.PostId</td>
                    </tr>
                    <tr>
                        <td>Tiêu đề:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td>@Model.CreatedDate</td>
                    </tr>
                    <tr>
                        <td>Scontents</td>
                        <td>@Model.Scontents</td>
                    </tr>
                    <tr>
                        <td>Contents</td>
                        <td>@Model.Contents</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>Public</td>
                        <td>
                            @if (Model.Published)
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3" checked="">
                                        <label for="switch-1"></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3">
                                        <label for="switch-2"></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>IsHot</td>
                        <td>
                            @if (Model.IsHot)
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3" checked="">
                                        <label for="switch-1"></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3">
                                        <label for="switch-2"></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>IsNewfeed</td>
                        <td>
                            @if (Model.IsNewfeed)
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3" checked="">
                                        <label for="switch-1"></label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-3">
                                        <label for="switch-2"></label>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện:</td>
                        <td>
                            <img width="200" height="200" src="~/images/tindang/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="PostId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
